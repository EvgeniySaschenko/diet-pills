.content
	.form-product
		&_content
			margin-bottom 30px
			display flex
			flex-direction row
			justify-content space-between
			align-items flex-start
			.form-product
				&__item
					width 310px
					position relative
					box-sizing border-box
					
			.info-box-1
				margin-bottom 25px
				&__middle
				&__bottom
					background #fff
				&__bottom
					border-radius 0 0 3px 3px
					position relative
					z-index 1
					padding-bottom 10px
					&::before
						content ""
						background url(../img/content/price-bg.png)
						background-repeat no-repeat
						width 100%
						height 100%
						position absolute
						z-index -1
					.order-box
						text-align right
			.info-box-2
				display flex
				flex-direction row
				justify-content space-between
				align-items flex-start
				flex-wrap wrap
				padding 15px
				background url(../img/content/product-bottom-bg.png)
				background-position bottom center
				background-repeat no-repeat
				&__col_1
					width 60%
				&__col_2
					width 40%
					text-align right
					margin-bottom 10px
				&__col_3
					width 100%
					display flex
					flex-direction row
					justify-content flex-end
					align-items flex-start