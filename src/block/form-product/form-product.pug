mixin b-form-product(items, clsses)
	+b.form-product(class='_' + clsses)
		each item, i in items
			+e.item(class='_' + i)
				+b.info-box-1
					+e.top
						// Эффект
						+b-array-word(item.effect, 'effect')
						// Продукт
						+b-img(item.productSrc, 'product')
					+e.middle
						// Название
						+b-array-word(item.name, 'name')
						// Приимущества
						+b-list(item.advantages, 'advantages')
					+e.bottom
						// Цена
						+b-array-word(item.priceInfo, 'price-info')
						// Радиокнопка
						+b.order-box
							+b.order
								+e.text!= item.orderText
								+e.INPUT.radio(type="radio", name="radio", id="order" + i)
								+e.LABEL.label(for="order" + i)


				.info-box-2
					// Рейтинг
					+b-array-word(item.ratingStarText, 'rating-star-text')
					+b-img(item.ratingStarSrc, 'rating-star')
					+b-array-word(item.ratingStarValue, 'rating-star-value')
					// Продавец
					+b-array-word(item.ratingSellerText, 'rating-seller-text')
					+b-img(item.ratingSellerLogoSrc, 'rating-seller-logo')